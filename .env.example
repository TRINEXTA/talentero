# ============================================
# TALENTERO - Configuration Environnement
# ============================================

# Base de données PostgreSQL
DATABASE_URL="postgresql://talentero:PASSWORD@localhost:5432/talentero?schema=public"

# NextAuth / JWT
JWT_SECRET="votre-secret-jwt-tres-long-et-securise-minimum-32-caracteres"
NEXTAUTH_URL="https://talentero.io"

# API Anthropic (Claude) - Parsing CV
ANTHROPIC_API_KEY="sk-ant-api..."

# API INSEE - Vérification SIRET (gratuit)
# Créer un compte sur https://api.insee.fr
INSEE_API_KEY="votre-cle-api-insee"
INSEE_API_SECRET="votre-secret-api-insee"

# Alternative : Pappers API (payant mais plus complet)
# PAPPERS_API_KEY="votre-cle-pappers"

# Emails - Brevo (ex-Sendinblue) - 300 emails/jour gratuit
BREVO_API_KEY="xkeysib-..."
EMAIL_FROM="contact@talentero.io"
EMAIL_FROM_NAME="Talentero"

# OU SMTP classique
# SMTP_HOST="ssl0.ovh.net"
# SMTP_PORT="465"
# SMTP_USER="contact@talentero.io"
# SMTP_PASSWORD="votre-mot-de-passe"

# Upload fichiers
UPLOAD_DIR="/var/www/talentero/uploads"
MAX_FILE_SIZE="10485760"  # 10MB en bytes

# URLs
NEXT_PUBLIC_APP_URL="https://talentero.io"
NEXT_PUBLIC_API_URL="https://talentero.io/api"

# Admin par défaut (créé au premier lancement)
ADMIN_EMAIL="admin@trinexta.fr"
ADMIN_PASSWORD="ChangerCeMotDePasse!"

# Mode
NODE_ENV="production"

# Redis (optionnel - pour sessions et cache)
# REDIS_URL="redis://localhost:6379"
